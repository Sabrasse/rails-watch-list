<div class="container">
  <h1><%=@list.name%></h1>
    <%=link_to "Add a new bookmark", new_list_bookmark_path(@list), class:'btn btn-success'%>
  <div class="cards">
    <%@list.bookmarks.each do |bookmark|%>
    <div class="card" style="width: 400px; height:auto">
      <div class="card-body">
        <div class="card_text">
          <h1><%=bookmark.movie.title%> - <%=bookmark.movie.rating%></h1>
          <p><%=bookmark.movie.overview%></p>
          <p><%=bookmark.comment%></p>
        </div>
        <%=link_to "Delete a bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'btn btn-warning'%>
      </div>
    </div>
    <%end%>
  </div>
</div>
